{
  "description": "Ultra-Workflow hooks (bash) - Global",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/skills/ultra-workflow/hooks/workflow-stop-hook.sh\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/skills/ultra-workflow/hooks/tdd-pretool-hook.sh\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/skills/ultra-workflow/hooks/post-tool-hook.sh\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
